<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Offline Patient Registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Offline Patient Registration</h1>
        <form action="/admin/daftar-pasien-offline" method="POST">
            <div class="mb-3">
                <label for="namaUser" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="namaUser" name="namaUser" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="tanggalLahir" class="form-label">Date of Birth</label>
                <input type="date" class="form-control" id="tanggalLahir" name="tanggalLahir" required>
            </div>
            <div class="mb-3">
                <label for="alamat" class="form-label">Address</label>
                <textarea class="form-control" id="alamat" name="alamat" required></textarea>
            </div>
            <div class="mb-3">
                <label for="nomorTelepon" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="nomorTelepon" name="nomorTelepon" required>
            </div>
            <div class="mb-3">
                <label for="dokterId" class="form-label">Select Doctor</label>
                <select class="form-select" id="dokterId" name="dokterId" required>
                    <% doctors.forEach(function(doctor) { %>
                    <option value="<%= doctor.idUser %>"><%= doctor.namaUser %></option>
                    <% }); %>
                </select>
            </div>
            <div class="mb-3">
                <label for="jadwalId" class="form-label">Select Schedule</label>
                <select class="form-select" id="jadwalId" name="jadwalId" required>
                    <% doctors.forEach(function(doctor) { %>
                        <optgroup label="<%= doctor.namaUser %>">
                            <% if (doctors.filter(d => d.idUser === doctor.idUser)[0].schedules) {
                                doctors.filter(d => d.idUser === doctor.idUser)[0].schedules.forEach(function(schedule) { %>
                                <option value="<%= schedule.idJadwal %>">
                                    <%= schedule.hari %> <%= schedule.jamMulai %> - <%= schedule.jamSelesai %>
                                </option>
                            <% }); } %>
                        </optgroup>
                    <% }); %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Register Patient</button>
        </form>
        <a href="/halaman-admin" class="btn btn-secondary mt-3">Back to Dashboard</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>