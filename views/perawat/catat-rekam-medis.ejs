<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Klinik SehatCare - Rekam Medis Pasien</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f5f5;
            padding-bottom: 80px;
            color: #333;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 50px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-bottom: 2px solid #007bff;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
        }

        header h1 {
            font-size: 28px;
            color: #007bff;
            font-weight: 600;
        }

        .container {
            margin: 100px auto 40px;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 800px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: 500;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .patient-info {
            background-color: #f8f9fa;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .is-invalid {
            border-color: red;
        }

        .back-button-container {
            margin: 20px 0;
            text-align: left;
        }

        .back-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #e74c3c;
            color: #fff;
            text-decoration: none;
            font-size: 14px;
            font-weight: bold;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
    </style>
</head>

<body>
    <header>
        <h1>Klinik SehatCare</h1>
        <nav>
            <a href="/logout" class="btn btn-outline-danger">Log Out</a>
        </nav>
    </header>
    <div class="container">
        <h1>Catat Rekam Medis</h1>
        <p>Nomor Antrian: <%= booking.nomorAntrian %>
        </p>
        <p>Nama Pasien: <%= booking.namaPasien %>
        </p>
        <p>Nama Dokter: <%= booking.namaDokter %>
        </p>

        <form action="/perawat/catat-rekam-medis" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="pasienId">Nama Pasien</label>
                <select class="form-control" name="pasienId" id="pasienId" required>
                    <option value="" disabled selected>Pilih Pasien</option>
                    <% patients.forEach(patient=> { %>
                        <option value="<%= patient.idUser %>">
                            <%= patient.namaUser %>
                        </option>
                        <% }); %>
                </select>

            </div>
            <div class="form-group">
                <label for="tekananDarah">Tekanan Darah</label>
                <input type="text" class="form-control" name="tekananDarah" id="tekananDarah"
                    placeholder="Contoh: 120/80" required>
            </div>
            <div class="form-group">
                <label for="tinggiBadan">Tinggi Badan (cm)</label>
                <input type="number" class="form-control" name="tinggiBadan" id="tinggiBadan" required>
            </div>
            <div class="form-group">
                <label for="beratBadan">Berat Badan (kg)</label>
                <input type="number" class="form-control" name="beratBadan" id="beratBadan" required>
            </div>
            <div class="form-group">
                <label for="suhuBadan">Suhu Badan (°C)</label>
                <input type="number" step="0.1" class="form-control" name="suhuBadan" id="suhuBadan" required>
            </div>
            <div class="form-group">
                <label for="keluhanPasien">Keluhan Pasien</label>
                <textarea class="form-control" name="keluhanPasien" id="keluhanPasien" rows="3" required></textarea>
            </div>
            <div class="form-group">
                <label for="dokumenMedis">Upload Dokumen Medis (Opsional)</label>
                <input type="file" class="form-control-file" name="dokumenMedis" id="dokumenMedis"
                    accept=".pdf,.jpg,.png">
            </div>

            <button type="submit" class="btn btn-primary">Simpan Rekam Medis</button>
            <div class="back-button-container">
                <a href="/perawat/halaman-perawat" class="back-button">← Back to Halaman Perawat</a>
            </div>
        </form>
        <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="successModalLabel">Berhasil</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Data Rekam Medis Berhasil Disimpan
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                    </div>
                </div>
            </div>
        </div>
        
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Optional: Add client-side validation
            const form = document.querySelector('form');
            form.addEventListener('submit', function (e) {
                const tekananDarah = document.getElementById('tekananDarah').value;
                const tekananDarahRegex = /^\d{2,3}\/\d{2,3}$/;

                if (!tekananDarahRegex.test(tekananDarah)) {
                    e.preventDefault();
                    alert('Format tekanan darah salah. Gunakan format: misalnya 120/80');
                }
            });
        });
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.querySelector('form');
            const submitButton = document.getElementById('submitRekamMedis');

            form.addEventListener('submit', function (event) {
                event.preventDefault(); // Mencegah submit form langsung

                // Lakukan validasi form di sini jika diperlukan
                const isValid = validateForm();

                if (isValid) {
                    // Kirim data form menggunakan AJAX
                    const formData = new FormData(form);

                    fetch(form.action, {
                        method: 'POST',
                        body: formData
                    })
                        .then(response => {
                            if (response.ok) {
                                // Tampilkan modal sukses
                                $('#successModal').modal('show');

                                // Reset form setelah sukses (opsional)
                                form.reset();
                            } else {
                                // Tangani error
                                throw new Error('Gagal menyimpan data');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert('Terjadi kesalahan saat menyimpan data');
                        });
                }
            });

            // Fungsi validasi form (contoh sederhana)
            function validateForm() {
                const requiredFields = form.querySelectorAll('[required]');
                let isValid = true;

                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        isValid = false;
                        field.classList.add('is-invalid');
                    } else {
                        field.classList.remove('is-invalid');
                    }
                });

                return isValid;
            }
        });
    </script>
</body>

</html>