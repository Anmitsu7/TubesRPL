<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Data Pasien</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>Data Pasien</h1>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nama Pasien</th>
                    <th>Tanggal</th>
                    <th>Tekanan Darah</th>
                    <th>Tinggi Badan</th>
                    <th>Berat Badan</th>
                    <th>Suhu Badan</th>
                    <th>Keluhan</th>
                    <th>Dokumen Medis</th>
                </tr>
            </thead>
            <tbody>
                <% riwayatMedis.forEach(data => { %>
                    <tr>
                        <td><%= data.namaPasien %></td>
                        <td><%= data.tanggal %></td>
                        <td><%= data.tekanan_darah || '-' %></td>
                        <td><%= data.tinggi_badan || '-' %></td>
                        <td><%= data.berat_badan || '-' %></td>
                        <td><%= data.suhu_badan || '-' %></td>
                        <td><%= data.keluhan_pasien || '-' %></td>
                        <td>
                            <% if (data.dokumen_medis) { %>
                                <a href="<%= data.dokumen_medis %>" target="_blank" class="btn btn-sm btn-success">Lihat</a>
                            <% } else { %>
                                <span class="text-muted">Tidak ada</span>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/halaman-dokter" class="btn btn-primary">Kembali</a>
    </div>
</body>
</html>
