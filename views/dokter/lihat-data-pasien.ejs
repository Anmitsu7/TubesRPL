<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Pasien</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <!-- Title -->
        <h1>Data Pasien</h1>

        <!-- Flash Messages -->
        <% if (messages.success) { %>
            <div class="alert alert-success"><%= messages.success %></div>
        <% } %>
        <% if (messages.error) { %>
            <div class="alert alert-danger"><%= messages.error %></div>
        <% } %>

        <!-- Table Data Pasien -->
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nama Pasien</th>
                    <th>Tanggal</th>
                    <th>Tekanan Darah</th>
                    <th>Tinggi Badan</th>
                    <th>Berat Badan</th>
                    <th>Suhu Badan</th>
                    <th>Keluhan</th>
                    <th>Dokumen Medis</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% riwayatMedis.forEach(data => { %>
                    <tr>
                        <td><%= data.namaPasien %></td>
                        <td><%= data.tanggal %></td>
                        <td><%= data.tekanan_darah || '-' %></td>
                        <td><%= data.tinggi_badan || '-' %></td>
                        <td><%= data.berat_badan || '-' %></td>
                        <td><%= data.suhu_badan || '-' %></td>
                        <td><%= data.keluhan_pasien || '-' %></td>
                        <td>
                            <% if (data.dokumen_medis) { %>
                                <a href="<%= data.dokumen_medis %>" target="_blank" class="btn btn-sm btn-success">Lihat</a>
                            <% } else { %>
                                <span class="text-muted">Tidak ada</span>
                            <% } %>
                        </td>
                        <td>
                            <!-- Tombol Diagnosa -->
                            <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#modalDiagnosa<%= data.idRiwayatMedis %>">
                                Diagnosa
                            </button>
                            <!-- Tombol Delete -->
                            <form action="/delete-data-pasien/<%= data.idRiwayatMedis %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Yakin ingin menghapus data ini?')">Delete</button>
                            </form>
                        </td>
                    </tr>

                    <!-- Modal Diagnosa -->
                    <div class="modal fade" id="modalDiagnosa<%= data.idRiwayatMedis %>" tabindex="-1" aria-labelledby="modalLabel<%= data.idRiwayatMedis %>" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalLabel<%= data.idRiwayatMedis %>">Input Diagnosa</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form action="/diagnosa/<%= data.idRiwayatMedis %>" method="POST">
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label for="diagnosa" class="form-label">Diagnosa</label>
                                            <textarea class="form-control" name="diagnosa" rows="2" required></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label for="resep" class="form-label">Resep</label>
                                            <textarea class="form-control" name="resep" rows="2" required></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label for="catatan" class="form-label">Catatan</label>
                                            <textarea class="form-control" name="catatan" rows="3"></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                                        <button type="submit" class="btn btn-primary">Simpan</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </tbody>
        </table>

        <!-- Back Button -->
        <a href="/halaman-dokter" class="btn btn-primary">Kembali</a>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
