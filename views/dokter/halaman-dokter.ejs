<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Halaman Dokter</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Klinik SehatCare</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/lihat-data-pasien">Lihat Data Pasien</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Header -->
    <header class="bg-light p-3 mb-4">
        <h1 class="text-center">Klinik SehatCare</h1>
        <h3 class="text-center">Selamat Datang, Dr. <%= dokter.namaDokter %></h3>
    </header>

    <!-- Container -->
    <div class="container">
        <!-- Jadwal Praktek -->
        <h3>Jadwal Praktek</h3>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Hari</th>
                    <th>Jam Mulai</th>
                    <th>Jam Selesai</th>
                </tr>
            </thead>
            <tbody>
                <% jadwal.forEach(item => { %>
                    <tr>
                        <td><%= item.hari %></td>
                        <td><%= item.jamMulai %></td>
                        <td><%= item.jamSelesai %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <!-- Daftar Pasien Hari Ini -->
        <h3>Daftar Pasien Hari Ini</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>No. Antrian</th>
                    <th>Nama Pasien</th>
                    <th>Nomor Telepon</th>
                    <th>Tanggal Booking</th>
                    <th>Metode Pendaftaran</th>
                    <th>Diagnosa</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% if (daftarPasien.length > 0) { %>
                    <% daftarPasien.forEach(pasien => { %>
                        <tr>
                            <td><%= pasien.nomorAntrian || '-' %></td>
                            <td><%= pasien.pasien %></td>
                            <td><%= pasien.nomorTelepon %></td>
                            <td><%= pasien.tanggalBooking %></td>
                            <td><%= pasien.metodePendaftaran %></td>
                            <td>
                                <% if (pasien.diagnosa) { %>
                                    <%= pasien.diagnosa %>
                                <% } else { %>
                                    <span class="text-muted">Belum ada diagnosa</span>
                                <% } %>
                            </td>
                            <td>
                                <a href="/diagnosa/<%= pasien.idBooking %>" class="btn btn-primary btn-sm">Diagnosa</a>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="7" class="text-center">Tidak ada pasien terjadwal hari ini</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
 